pipeline {
    agent { label 'windows' }  // ‚úÖ Ensure Jenkins runs on Windows machine

    environment {
        PYTHON_HOME = 'C:\\Users\\Hitesh Darshan\\AppData\\Local\\Programs\\Python\\Python313'
        PATH = "${PYTHON_HOME};${PYTHON_HOME}\\Scripts;${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                echo "‚úÖ Pulling code from GitHub..."
                checkout scm
            }
        }

        stage('Lint & Test') {
            steps {
                echo "üîç Linting & Testing..."
                bat '''
                pip install --upgrade pip
                pip install pylint black pytest
                pylint Coin_Collector_game.py || exit /b 0
                black --check Coin_Collector_game.py
                pytest tests/ || exit /b 1
                '''
            }
        }

        stage('Build EXE') {
            steps {
                echo "üõ†Ô∏è Building executable..."
                bat '''
                pip install pyinstaller
                if exist dist rmdir /S /Q dist
                if exist build rmdir /S /Q build

                :: If you already have a .spec file
                if exist Coin_Collector_game.spec (
                    pyinstaller Coin_Collector_game.spec
                ) else (
                    pyinstaller --onefile --windowed Coin_Collector_game.py
                )
                '''
            }
        }

        stage('Deploy Executable') {
            steps {
                echo "üöÄ Deploying .exe to C:\\GameTrail_Executable..."
                bat '''
                if not exist C:\\GameTrail_Executable mkdir C:\\GameTrail_Executable
                xcopy /E /I /Y dist\\Coin_Collector_game C:\\GameTrail_Executable
                '''
            }
        }
    }

    post {
        success {
            echo "üéâ Build successful! Game available at C:\\GameTrail_Executable"
        }
        failure {
            echo "‚ùå Build failed. Check logs."
        }
    }
}
