pipeline {
    agent { label 'windows' }  // ✅ Ensure Jenkins agent runs on Windows

    environment {
        PYTHON_HOME = 'C:\\Users\\Hitesh Darshan\\AppData\\Local\\Programs\\Python\\Python313'
        PATH = "${PYTHON_HOME};${PYTHON_HOME}\\Scripts;%PATH%"
    }

    stages {
        stage('Checkout') {
            steps {
                echo "✅ Pulling code from GitHub..."
                checkout scm
            }
        }

        stage('Lint & Test') {
            steps {
                echo "🔍 Linting & Testing..."
                bat '''
                pip install pylint black pytest
                pylint Coin_Collector_game.py || exit /b 0
                black --check Coin_Collector_game.py
                pytest tests/
                '''
            }
        }

        stage('Build EXE') {
            steps {
                echo "🛠️ Building executable..."
                bat '''
                pip install pyinstaller
                rmdir /S /Q dist 2>nul
                rmdir /S /Q build 2>nul
                pyinstaller Coin_Collector_game.spec
                '''
            }
        }

        stage('Deploy Executable') {
            steps {
                echo "🚀 Deploying .exe to C:\\GameTrail_Executable..."
                bat '''
                mkdir C:\\GameTrail_Executable 2>nul
                xcopy /E /I /Y dist\\Coin_Collector_game C:\\GameTrail_Executable
                '''
            }
        }
    }

    post {
        success {
            echo "🎉 Build successful! Game available at C:\\GameTrail_Executable"
        }
        failure {
            echo "❌ Build failed. Check logs."
        }
    }
}
